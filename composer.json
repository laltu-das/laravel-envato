{
    "name": "laltu/laravel-envato",
    "description": "laravel envato",
    "keywords": [
        "laltu",
        "laravel envato"
    ],
    "homepage": "https://github.com/laltu/laravel-envato",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "laltu das",
            "email": "laltu.lspl@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "baileyherbert/envato": "^3.1",
        "illuminate/support": "*",
        "inertiajs/inertia-laravel": "^1.0",
        "livewire/livewire": "^3.3",
        "tightenco/ziggy": "^2.1"
    },
    "require-dev": {
        "orchestra/testbench": "^8.17",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Laltu\\LaravelEnvato\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laltu\\LaravelEnvato\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laltu\\LaravelEnvato\\LaravelEnvatoServiceProvider"
            ],
            "aliases": {
                "LaravelEnvatoInstaller": "Envato"
            }
        }
    }
}
